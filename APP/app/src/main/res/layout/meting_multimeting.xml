<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvY"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="#fdc101"
        app:layout_constraintStart_toEndOf="@+id/tvX"
        app:layout_constraintTop_toBottomOf="@+id/tvT" />

    <TextView
        android:id="@+id/tvZ"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="#c95854"
        app:layout_constraintStart_toEndOf="@+id/tvY"
        app:layout_constraintTop_toBottomOf="@+id/tvT" />

    <TextView
        android:id="@+id/tvX"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="#005b7f"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvT" />

    <TextView
        android:id="@+id/tvT"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:hint="Touch graph for info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lcTest" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/lcTest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_check"
            android:fontFamily="@font/advent_pro_semibold"
            android:paddingBottom="5dp"
            android:paddingHorizontal="16dp"
            android:paddingTop="5dp"
            android:text="Accept"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bRejectMeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_close"
            android:fontFamily="@font/advent_pro_semibold"
            android:paddingBottom="5dp"
            android:paddingHorizontal="16dp"
            android:paddingTop="5dp"
            android:text="REJECT"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lcTest"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" >

    </com.github.mikephil.charting.charts.LineChart>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/bStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_play_circle_outline_black_24dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:paddingBottom="5dp"
            android:paddingHorizontal="16dp"
            android:paddingTop="5dp"
            android:text="Start"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_stop_black_24dp"
            android:fontFamily="@font/advent_pro_semibold"
            android:paddingBottom="5dp"
            android:paddingHorizontal="16dp"
            android:paddingTop="5dp"
            android:text="Stop"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>