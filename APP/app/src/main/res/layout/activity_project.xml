<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView5"
        >

        <Button
            android:id="@+id/bViewMetingen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_pageview_yellow_24dp"
            android:paddingBottom="5dp"
            android:paddingHorizontal="5dp"
            android:paddingTop="5dp"
            android:text="metingen"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:fontFamily="@font/advent_pro_semibold"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"/>

        <Button
            android:id="@+id/bAddMeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_add_box_black_24dp"
            android:paddingBottom="5dp"
            android:paddingHorizontal="5dp"
            android:paddingTop="5dp"
            android:text="ADD METING"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:fontFamily="@font/advent_pro_semibold"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"/>

        <Button
            android:id="@+id/bqrProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_center_focus_weak_black_24dp"
            android:paddingBottom="5dp"
            android:paddingHorizontal="5dp"
            android:paddingTop="5dp"
            android:text="QR code"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:fontFamily="@font/advent_pro_semibold"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"/>

        <Button
            android:id="@+id/bDeleteProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/ic_delete_forever_black_24dp"
            android:paddingBottom="5dp"
            android:paddingHorizontal="5dp"
            android:paddingTop="5dp"
            android:text="Delete"
            android:textColor="@color/colorSecondary"
            android:textStyle="bold"
            android:fontFamily="@font/advent_pro_semibold"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="20dp"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:background="@color/colorBackground" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/advent_pro_semibold"
                android:text="ProJECT TITEL"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textGebruikersnaam"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:text="Gebruikersnaam"
                android:fontFamily="@font/advent_pro_semibold"
                android:textColor="@color/colorText" />

            <TextView
            android:id="@+id/textTime"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="4dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:text="Tijd  Datum"
            android:fontFamily="@font/advent_pro_semibold"
            android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/textLocation"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location_on_white_24dp"
                android:text="Locatie"
                android:fontFamily="@font/advent_pro_semibold"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/textAantalMetingen"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="4dp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_amount_meting"
                android:text="Aantal Metingen"
                android:fontFamily="@font/advent_pro_semibold"
                android:textColor="@color/colorText" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>