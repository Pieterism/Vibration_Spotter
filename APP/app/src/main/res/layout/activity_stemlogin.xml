<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vibrationspotter.vibrationspotterapp.GebruikerLogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/logo" />

            <EditText
                android:id="@+id/leerkrachtlogintext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="70dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/leerkrachtwachtwoordtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:background="@android:color/transparent"
                android:drawablePadding="12dp"
                android:padding="8dp"
                android:hint="Password"
                android:maxLines="1"
                android:drawableLeft="@drawable/ic_lock_white_24dp"
                android:layout_marginTop="4dp"
                android:layout_marginHorizontal="25dp"/>

            <Button
                android:id="@+id/bglogin"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_button"
                android:clickable="true"
                android:fontFamily="@font/advent_pro_semibold"
                android:lineSpacingExtra="12sp"
                android:text="log in"
                android:textColor="@color/colorBackground"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/naarQR"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/custom_button"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_center_focus_weak_white_24dp"
                android:fontFamily="@font/advent_pro_semibold"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:text="Scan QR-code"
                android:textColor="@color/colorBackground"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>